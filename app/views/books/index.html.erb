<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?ï¼Ÿ" %></td>
  </tbody>
  <% end %>
</table>



<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h2 class="create-title">New book</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %></h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
